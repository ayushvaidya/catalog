<%= simple_form_for([@post, @post.comments.build]) do |f| %>

  <div class="field">
    <%= f.hidden_field :post_id, value: params[:post_id] %>
  </div>

  <div class="field">
    <%= f.text_field :body,
      class: "form-control form-control-comment",
      placeholder: "Comment",
      required: true %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Submit", class: "form-button form-button-comment" %>
  </div>
<% end %>
