<div class="form-container">
<div class="form-title">Rename Board</div>

  <%= simple_form_for @category, html: { multipart: true } do |form| %>
    <% if @category.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

        <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.text_field :name,
        class: "form-control",
        placeholder: "Board name",
        required: true %>
    </div>

    <div class="actions">
      <%= form.button :submit, "Save changes", class: "form-button" %>
    </div>
  <% end %>

  <div class="shared-links">
    <%= link_to 'Delete board', @category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'link-style' %>
    <%= link_to 'Return home', root_path, class: 'link-style' %>

  </div>
</div>
